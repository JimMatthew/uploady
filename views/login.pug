doctype html
html
  head
    title Login
  body
    h1 Login
    if message
      p= message
    form(action="/login" method="POST")
      label(for="username") Username:
      input(type="text" name="username" required)
      br
      label(for="password") Password:
      input(type="password" name="password" required)
      br
      button(type="submit") Login